<header class='header'>
  <div class="">
    {{> logo}}
  </div>
  {{!-- //////////////////////////////////////////////////////////////////////// --}}
  <nav class='header_nav'>
    <div class="header_nav_right">
      {{> nav-1 list=header isVertical=false}}
    </div>
  </nav>
</header>

{{#with hero}}
<div class="hero_container">
  <section class="hero">
    <div class="hero_content">
      <h1 class="hero_title">{{title}}</h1>
      <p class="hero_text">{{text}}</p>
    </div>
    <div class="hero_slider">
      <img src="{{photo}}" alt="Hero Image" class="hero_img">
      <div class="hero_slider_icon hero_slider_left">{{left}}</div>
      <div class="hero_slider_icon hero_slider_right">{{right}}</div>
    </div>
  </section>
</div>
{{/with}}

<main class="blog">
  {{#each blog}}
    {{>cardBlog data=this}}
  {{/each}}
</main>

{{#with form}}
  <section class="form">
    <div class="form_content">
      <h3 class="form_title">{{title}}</h3>
      <p class="form_info">{{info}} </p>
    </div>
    <div class="form_action">
      <a class="button form_button" href="{{href}}">{{button}}</a>

    </div>
  </section>
{{/with}}


<footer class="footer">
  <div>
    {{> logo}}
    <span class="footer-copyright">Copyright 2023-2024</span>
  </div>
  {{#each footer}}
    <div>
      <span class="footer_title">
        {{title}}
      </span>
      {{> nav-1 list=links isVertical=true}}
    </div>
  {{/each}}
</footer>